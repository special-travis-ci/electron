{
  "name": "first-electron-app",
  "version": "1.0.0",
  "description": "Description de notre premi√®re application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "run-os",
    "build:win32": "electron-builder --win",
    "build:darwin": "electron-builder --mac",
    "clean": "rimraf ./dist",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.renaudberthier.electron-travis",
    "productName": "Test Electron Travis",
    "copyright": "MIT",
    "files": [
      "**/*",
      "build/Release/*",
      "assets/*.*"
    ],
    "mac": {
      "category": "public.build.automation",
      "icon": "assets/icon.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "electron-travis-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/icon.ico",
      "artifactName": "electron-travis-${version}.${ext}"
    },
    "portable": {
      "artifactName": "electron-travis.exe"
    },
    "appx": {
      "applicationId": "electron.travis",
      "backgroundColor": "#464646",
      "identityName": "electron.travis",
      "publisherDisplayName": "rberthier",
      "artifactName": "electron-travis-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  },
  "keywords": [],
  "author": "ls-a",
  "license": "ISC",
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "rimraf": "^3.0.2"
  }
}
